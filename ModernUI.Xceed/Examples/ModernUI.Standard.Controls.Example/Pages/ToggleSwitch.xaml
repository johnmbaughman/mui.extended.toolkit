<UserControl x:Class="ModernUI.Standard.Controls.Example.Pages.ToggleSwitch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:ToggleSwitch="clr-namespace:ToggleSwitch;assembly=ToggleSwitch">

    <StackPanel>
        <ToggleSwitch:HorizontalToggleSwitch Margin="0,20" />
        <ToggleSwitch:HorizontalToggleSwitch Margin="0,20" Width="60" />
        <ToggleSwitch:HorizontalToggleSwitch Margin="0,20" Height="20" Width="40" ThumbSize="20" />
        <ToggleSwitch:HorizontalToggleSwitch Margin="0,20" CheckedContent="ON" UncheckedContent="OFF" />
    </StackPanel>

</UserControl>
